{
  "name": "@storefront/flux-capacitor",
  "version": "0.0.28-development",
  "description": "State management for StoreFront",
  "repository": {
    "type": "git",
    "url": "https://github.com/groupby/flux-capacitor.git"
  },
  "bugs": {
    "url": "https://github.com/groupby/flux-capacitor/issues"
  },
  "homepage": "https://github.com/groupby/flux-capacitor#readme",
  "author": "Ben Teichman <ben.teichman@groupbyinc.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "module:esnext": "esnext/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/",
    "esnext/",
    "src/"
  ],
  "scripts": {
    "start": "start-runner -p re-start/presets/typescript",
    "esnext": "npm start build -- -- --compileOpts.configFile tsconfig.esnext.json --outDir esnext",
    "dev": "npm start dev",
    "test": "npm start test",
    "tdd": "npm start tdd",
    "prepush": "npm start prepush",
    "prepublish": "npm start build && npm run esnext"
  },
  "release": {
    "verifyConditions": "condition-circle"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "restart": {
      "testFiles": [
        "test/bootstrap.ts",
        "test/unit/**/*.ts"
      ],
      "releaseOpts": {
        "public": true
      }
    }
  },
  "devDependencies": {
    "@types/chai": "^4.0.0",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.14",
    "@types/sinon": "^2.3.2",
    "@types/sinon-chai": "^2.7.28",
    "chai": "^4.0.0",
    "condition-circle": "^1.5.0",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.14.1",
    "mocha-suite": "^1.0.11",
    "re-start": "^1.14.8",
    "sinon": "^2.3.5",
    "sinon-chai": "^2.11.0",
    "start-simple-cli": "^4.1.1",
    "tslint": "^5.5.0",
    "tslint-config-groupby": "^1.0.0",
    "typescript": "^2.4.2"
  },
  "dependencies": {
    "@manaflair/redux-batch": "^0.1.0",
    "@types/redux-logger": "^3.0.0",
    "eventemitter3": "^2.0.3",
    "fetch-ponyfill": "^4.1.0",
    "groupby-api": "^2.0.1",
    "redux": "^3.7.0",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.15.4",
    "redux-undo": "^0.6.1",
    "redux-validator": "^0.2.1",
    "sayt": "^0.1.7",
    "uuid": "^3.1.0"
  }
}
